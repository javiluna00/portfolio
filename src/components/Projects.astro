---
import CampingImage from "./assets/images/campingalbolafia.png";
import ProjectCard from "./ProjectCard.astro";
import ProjectIcon from "./icons/ProjectIcon.astro";
const PROJECTS = [
    {
        title: "Camping La Albolafia",
        description:
            "Desarrollo desde cero del sitio web de Camping La Albolafia. Página estática realizada con HTML5, CSS, Javascript y Bootstrap.",
        image: CampingImage,
        link: "https://campinglaalbolafia.com/",
    },
];
---

<nav class="flex justify-start items-center gap-x-2 text-sm">
    <ProjectIcon class="size-6 text-white" />
    <h2 class="text-md font-semibold">Proyectos</h2>
    <div class="h-[2px] w-full bg-white"></div>
</nav>

<section
    class="flex flex-col justify-center items-center text-sm mt-10 gap-y-20"
>
    <div class="w-full px-5">
        <!-- Item -->

        {PROJECTS.map((experience) => <ProjectCard experience={experience} />)}
    </div>
</section>
