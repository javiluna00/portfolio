---
import Pill from "./Pill.astro";

const { education } = Astro.props;
---

<div class="w-full flex border-l-2 border-white">
    <section
        class="rounded-lg min-h-32 flex flex-col justify-start items-start gap-y-2 px-6 py-4 w-full md:w-[700px]"
    >
        <Pill
            class="bg-gradient-to-br from-white to-white/50 text-zinc-950 select-none"
        >
            <span>{education.date}</span>
        </Pill>

        <h4 class="text-xl md:text-2xl">{education.title}</h4>
        <span class={`${education.placeColor} text-md md:text-lg`}
            >{education.place}</span
        >
        <span class="text-md text-pretty">{education.description}</span>

        {
            education.logos && (
                <div class="flex justify-center items-center gap-x-5 p-2 bg-white/90 rounded-lg">
                    {education.logos.map((logo) => (
                        <img
                            class="max-h-10 object-cover"
                            src={logo}
                            alt={`Logo de ${education.title}`}
                        />
                    ))}
                </div>
            )
        }
    </section>
</div>
